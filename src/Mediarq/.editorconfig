# -----------------------------
# Root EditorConfig
# -----------------------------
root = true

# -----------------------------
# C# files
# -----------------------------
[*.cs]

###############
# Formatting
###############
# Indentation
indent_style = space
indent_size = 4

# Newline at end of file
insert_final_newline = true

# Trailing whitespace
trim_trailing_whitespace = true

# -----------------------------
# C# specific code style
# -----------------------------
# Nullable reference types
dotnet_style_require_nullable_reference_types = enable:error

# Naming conventions
dotnet_naming_rule.private_members_should_be_camel_case.severity = warning
dotnet_naming_rule.private_members_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_members_should_be_camel_case.style = camel_case_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.accessibility = private

dotnet_naming_style.camel_case_style.capitalization = camel_case

# Prefer explicit type instead of var
dotnet_style_var_for_built_in_types = false:error
dotnet_style_var_when_type_is_apparent = false:error
dotnet_style_var_elsewhere = false:error

# Prefer expression-bodied members when possible
csharp_style_expression_bodied_methods = when_possible:warning
csharp_style_expression_bodied_properties = when_possible:warning

# -----------------------------
# Sonar / Documentation rules
# -----------------------------
# Classes publiques doivent être commentées
dotnet_diagnostic.S1750.severity = error

# Méthodes publiques doivent être commentées
dotnet_diagnostic.S1751.severity = error

# Membres publics doivent être commentés
dotnet_diagnostic.S1200.severity = error

# -----------------------------
# FxCop / Roslynator analyzers
# -----------------------------
# Forcer l'analyse stricte
dotnet_analyzer_diagnostic.severity = warning

# -----------------------------
# Security
# -----------------------------
# Désactiver certains warnings si nécessaire, sinon tout est activé
dotnet_analyzer_diagnostic.category-Security.severity = warning

# -----------------------------
# Code style et formatting supplémentaires
# -----------------------------
csharp_new_line_before_open_brace = all:error
csharp_indent_case_contents = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_after_cast = true
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false

# IDE0160: Convertir en namespace bloc inclus dans l'étendue
dotnet_diagnostic.IDE0160.severity = none

# IDE1006: Styles d'affectation de noms
dotnet_diagnostic.IDE1006.severity = none

# IDE0055: Corriger la mise en forme
dotnet_diagnostic.IDE0055.severity = none

# CA1859: Utiliser des types concrets si possible pour améliorer les performances
dotnet_diagnostic.CA1859.severity = none

# IDE0022: Utiliser un corps de bloc pour une méthode
dotnet_diagnostic.IDE0022.severity = none

# IDE0008: Utiliser un type explicite
dotnet_diagnostic.IDE0008.severity = none

# IDE0058: La valeur d'expression n'est jamais utilisée
dotnet_diagnostic.IDE0058.severity = none

# CA1310: Spécifier StringComparison à des fins de précision
dotnet_diagnostic.CA1310.severity = none

# CA1848: Utiliser les délégués LoggerMessage
dotnet_diagnostic.CA1848.severity = none

# IDE0290: Utiliser le constructeur principal
dotnet_diagnostic.IDE0290.severity = suggestion

# S2326: Unused type parameters should be removed
dotnet_diagnostic.S2326.severity = silent
